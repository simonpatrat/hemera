.link-icon {
  width: 32px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  font-size: 20px;
  border-radius: 50%;
  margin-right: 12px;
  display: inline-block;

  &--big {
    width: 44px;
    height: 44px;
    line-height: 44px;
    font-size: 24px;
  }

  &--small {
    width: 18px;
    height: 18px;
    line-height: 18px;
    font-size: 16px;
  }

  &--bordered {
    border: 1px solid #fff;
  }
}
