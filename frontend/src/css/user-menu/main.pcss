#user-menu {
  padding: 8px 16px;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: var(--horizontal-menu-height);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1000;
}
.user-info {
  &.dropdown {
    .dropdown__button {
      text-transform: none;
      background: transparent;
      border: none;
      box-shadow: none;
      margin: 0;
      transition: all 300ms ease;
    }
  }
}
